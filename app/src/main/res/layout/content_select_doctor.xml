<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="patient.medical.dt.mediaid.fragment.SelectDoctor"
        tools:showIn="@layout/activity_select_doctor">


        <patient.medical.dt.mediaid.views.MyTextViewNormal
            style="@style/Select_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Hospital" />

        <patient.medical.dt.mediaid.views.MyTextViewNormal
            android:id="@+id/txtHospital"
            style="@style/Names_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="@color/lineColor"

            />

        <patient.medical.dt.mediaid.views.MyTextViewNormal
            style="@style/Select_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Doctor" />

        <patient.medical.dt.mediaid.views.MyTextViewNormal
            android:id="@+id/txtDoctor"
            style="@style/Names_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="@color/lineColor"

            />

        <patient.medical.dt.mediaid.views.MyTextViewNormal
            style="@style/Select_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Date" />

        <patient.medical.dt.mediaid.views.MyTextViewNormal
            android:id="@+id/txtDate"
            style="@style/Names_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="@color/lineColor"

            />

        <patient.medical.dt.mediaid.views.MyTextViewNormal
            style="@style/Select_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Time"

            />

        <patient.medical.dt.mediaid.views.MyTextViewNormal
            android:id="@+id/txtTime"
            style="@style/Names_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="@color/lineColor"

            />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/list_gradbutton"
            android:text="Submit"
            android:textColor="@color/white" />
    </LinearLayout>
</ScrollView>