<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/startColor</item>
        <item name="colorAccent">@color/startColor</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="LoginTextView">
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/textColor</item>

    </style>

    <style name="TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/startColor</item>

    </style>

    <style name="ItemText">
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemTexttag">
        <item name="android:textSize">24sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="NavigationDrawerStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:typeface">monospace</item>
    </style>


    <style name="Select_TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">10dp</item>


    </style>

    <style name="Names_TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:drawableRight">@drawable/ic_drop_down</item>

    </style>

    <style name="TextViewReport">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="EdiTextReport">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
